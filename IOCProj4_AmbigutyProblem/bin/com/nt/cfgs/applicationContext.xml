<?xml version="1.0" encoding="UTF-8"?>
  <beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
        
        <!-- enable the Component Scan -->
          <context:component-scan base-package="com.nt.sbeans"></context:component-scan>
          
          <!-- predifined calss spring bean -->
          <bean id="ldt" class="java.time.LocalDateTime" factory-method="of"></bean>
          
           <bean id="ldt1" class="java.time.LocalDateTime" factory-method="now"></bean>
           
        </beans>